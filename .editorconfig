root = true

[*.{adoc,bat,groovy,html,java,js,jsp,kt,kts,md,properties,py,rb,sh,sql,svg,txt,xml,xsd}]
charset = utf-8

[*.{groovy,java,kt,kts,xml,xsd}]
indent_style = tab
indent_size = 4
continuation_indent_size = 8
end_of_line = lf
max_line_length = 120
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yml,yaml}]
indent_style = tab
indent_size = 2